<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context="com.example.android.wtmcoursework.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/briefback"
        android:orientation="vertical"
        tools:context="com.example.android.wtmcoursework.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:text="Fun Facts"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#354056"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_new_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:allowUndo="false"
            android:background="@drawable/round_corner_new"
            android:onClick="toggleQuiz1"
            android:padding="15dp"
            android:text="Postbox"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/relative_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#fcfbf0"
            android:onClick="toggleQuiz1"
            android:visibility="gone"
            tools:visibility="visible">


            <TextView
                android:id="@+id/text_view_relative_layout"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="The Dorset village of Holwell is home to the oldest postbox in Britain. Brought there in 1853 it survived two world wars and has seen five monarchs rule Britain."
                android:textColor="@android:color/darker_gray"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="90dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/postboxn" />

            <Button
                android:id="@+id/moreButton1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/imageView1"
                android:layout_margin="20dp"
                android:background="@drawable/round_corner_new"
                android:onClick="clickOnMore"
                android:textAllCaps="false"
                android:padding="5dp"
                android:text="Want to know more?"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner_new"
            android:onClick="toggleQuiz2"
            android:padding="15dp"
            android:text="Letter"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/relative_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#fcfbf0"
            android:onClick="toggleQuiz2"
            android:visibility="gone"
            tools:visibility="visible">


            <TextView
                android:id="@+id/text_view_relative_layout2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="The most expensive letter sold at an auction was sold for US$6,098,500 in 2013 by Christie's. Written by Francis Crick in 1953 to his son Michael, outlining the revolutionary discovery of the structure and function of DNA."
                android:textColor="@android:color/darker_gray"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="115dp"
                android:layout_height="75dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/envelope" />

            <Button
                android:id="@+id/moreButton2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/text_view_relative_layout2"
                android:layout_margin="20dp"
                android:background="@drawable/round_corner_new"
                android:onClick="clickOnMore2"
                android:padding="5dp"
                android:textAllCaps="false"
                android:text="Read on..."
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner_new"
            android:onClick="toggleQuiz3"
            android:padding="15dp"
            android:text="Pigeon Post"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/relative_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#fcfbf0"
            android:onClick="toggleQuiz3"
            android:visibility="gone"
            tools:visibility="visible">


            <TextView
                android:id="@+id/text_view_relative_layout3"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:text="An inmate in Costa Rica used a homing pigeon as a drug mule. It had a bag tied to its body containing 14g of each cocaine and marijuana."
                android:textColor="@android:color/darker_gray"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="135dp"
                android:layout_height="145dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/pigeon" />

            <Button
                android:id="@+id/moreButton3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/text_view_relative_layout3"
                android:layout_margin="15dp"
                android:background="@drawable/round_corner_new"
                android:onClick="clickOnMore3"
                android:padding="5dp"
                android:text="More details...?"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

        <Button
            android:id="@+id/button_envelope"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner_new"
            android:onClick="toggleQuiz4"
            android:padding="15dp"
            android:text="Message in a Bottle"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/relative_layout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#fcfbf0"
            android:onClick="toggleQuiz4"
            android:visibility="gone"
            tools:visibility="visible">


            <TextView
                android:id="@+id/text_view_relative_layout4"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:text="The oldest message in a bottle was found in 2015, 108 years after having been thrown into the sea."
                android:textColor="@android:color/darker_gray"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/flaschenpost" />

            <Button
                android:id="@+id/moreButton4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/text_view_relative_layout4"
                android:layout_margin="20dp"
                android:background="@drawable/round_corner_new"
                android:onClick="clickOnMore4"
                android:padding="5dp"
                android:textAllCaps="false"
                android:text="More amazing stories?"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>


        <Button
            android:id="@+id/button_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner_new"
            android:onClick="toggleQuiz5"
            android:padding="15dp"
            android:text="Stamp"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="24sp" />

        <RelativeLayout
            android:id="@+id/relative_layout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#fcfbf0"
            android:onClick="toggleQuiz5"
            android:visibility="gone"
            tools:visibility="visible">


            <TextView
                android:id="@+id/text_view_relative_layout5"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:text="The Penny Black was the world's first adhesive postage stamp used in a public postal system, issued in Great Britain on 1 May 1840 it is now worth up to Â£15,000."
                android:textColor="@android:color/darker_gray"
                android:textSize="21sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="110dp"
                android:layout_height="140dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/pennyblack" />

            <Button
                android:id="@+id/moreButton5"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/text_view_relative_layout5"
                android:layout_margin="15dp"
                android:background="@drawable/round_corner_new"
                android:onClick="clickOnMore5"
                android:padding="5dp"
                android:text="Would like to buy one?"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>

